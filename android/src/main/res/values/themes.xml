<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlutterFashionsdk" parent="android:Theme.Material.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AiutaBottomSheetDialogTheme</item>
    </style>

    <style name="AiutaBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AiutaBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="enableEdgeToEdge">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="paddingTopSystemWindowInsets">true</item>
    </style>

    <style name="AiutaBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>